@{
    ViewData["Title"] = "Movie Deletion";
}

<!-- Model Declaration -->
@model Movie

<!-- Top of Page Information -->
<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete @Model.Title?</h3>

<!-- Buttons with form to submit delete and cancelation-->
<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="MovieList" class="btn-outline-primary">Cancel</a>

    <input type="hidden" asp-for="MovieId" />
</form>